<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Dark" parent="Theme.DailyApp">
        <item name="android:colorBackground">@color/dark_grey</item>
        <item name="fragmentColorBackground">@color/dark_grey</item>

    </style>
    <style name="Light" parent="Theme.DailyApp">
        <item name="android:colorBackground">@color/light_grey</item>
        <item name="fragmentColorBackground">@color/light_grey</item>
    </style>
</resources>